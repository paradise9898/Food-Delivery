      input#fname(type='text' name='username')
      input#secname(type='text' name='password')
      input#sub(type='submit' name='')


script.
  Document.getElementById('fname').textContent = username;
  Document.getElementById('secname').textContent = password;
  const data = {username, password};
  const options = {
  method: 'POST'
  headers: {
  'Content-Type': 'application/json'
  },
  body: JSON.stringify(data)
  };
  fetch('' , options)
  console.log(fname)
  console.log(secname)
